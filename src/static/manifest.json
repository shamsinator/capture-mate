{
  "name": "Capture Mate",
  "description": "Screen Capturing Extension For Google Chrome",
  "version": "1.0.1",
  "manifest_version": 3,
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_title": "Chrome Extension With React",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": ["activeTab", "tabs", "storage", "scripting", "background"]
}
